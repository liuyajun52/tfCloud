<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MagazineActivity" >

    <ExpandableListView
        android:id="@+id/magazineExpandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/magazineC"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

    </ExpandableListView>

    <ImageView
        android:id="@+id/magazineC"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/magazineExpandableListView"
        android:layout_alignParentTop="true"
        android:src="@drawable/news_default" />

    <TextView
        android:id="@+id/magazineT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/magazineC"
        android:layout_toRightOf="@+id/magazineC"
        android:maxEms="6"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/smButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/magazineExpandableListView"
        android:layout_alignParentRight="true"
        android:text="声明" />

    <Button
        android:id="@+id/bwButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/smButton"
        android:layout_alignRight="@+id/smButton"
        android:text="编委" />

    <ProgressBar
        android:id="@+id/magazineProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>
